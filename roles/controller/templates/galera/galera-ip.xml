<cib validate-with="pacemaker-1.2">
  <configuration>
    <crm_config/>
    <nodes/>
    <resources>
      <primitive class="ocf" id="ip-galera-pub-{{vip_mariadb}}" provider="heartbeat" type="IPaddr2">
        <instance_attributes id="ip-galera-pub-{{vip_mariadb}}-instance_attributes">
          <nvpair id="ip-galera-pub-{{vip_mariadb}}-instance_attributes-ip" name="ip" value="{{vip_mariadb}}"/>
          <nvpair id="ip-galera-pub-{{vip_mariadb}}-instance_attributes-cidr_netmask" name="cidr_netmask" value="32"/>
        </instance_attributes>
        <operations>
          <op id="ip-galera-pub-{{vip_mariadb}}-start-timeout-20s" interval="0s" name="start" timeout="20s"/>
          <op id="ip-galera-pub-{{vip_mariadb}}-stop-timeout-20s" interval="0s" name="stop" timeout="20s"/>
          <op id="ip-galera-pub-{{vip_mariadb}}-monitor-interval-30s" interval="30s" name="monitor"/>
        </operations>
      </primitive>
    </resources>
    <constraints/>
  </configuration>
  <status/>
</cib>
